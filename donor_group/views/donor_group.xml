<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- list View -->
        <record id="donor_group_action_view_list" model="ir.ui.view">
            <field name="name">donor.group.list</field>
            <field name="model">donor.group</field>
            <field name="arch" type="xml">
                <list string="Donor Category">
                    <field name="sequence" widget="handle" />
                    <field name="description"/>
                    <field name="contact"/>
                    <field name="phone"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="donor_group_action_view_form" model="ir.ui.view">
            <field name="name">donor.group.form</field>
            <field name="model">donor.group</field>
            <field name="arch" type="xml">
                <form string="Donor Category">
                    <sheet>
                        <group>
                            <h1>
                                <field name="description"/>
                            </h1>
                            <field name="contact"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="donor_group_action" model="ir.actions.act_window">
            <field name="name">Donor Category</field>
            <field name="res_model">donor.group</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="donor_group_menu" name="Donor Category" parent="crm.crm_menu_sales" action="donor_group_action" sequence="10"/>

    </data>
</odoo>
