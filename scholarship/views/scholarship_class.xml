<odoo>

    <record id="view_scholarship_class_tree" model="ir.ui.view">
        <field name="name">scholarship.class.list</field>
        <field name="model">scholarship.class</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_scholarship_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">scholarship.class</field>
        <field name="view_mode">list</field>
    </record>


</odoo>
