<odoo>

    <record id="view_scholarship_category_tree" model="ir.ui.view">
        <field name="name">scholarship.category.list</field>
        <field name="model">scholarship.category</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_scholarship_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">scholarship.category</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
