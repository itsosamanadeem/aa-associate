<odoo>

    <record id="view_scholarship_lines_remarks_list" model="ir.ui.view">
        <field name="name">scholarship.lines.remarks.list</field>
        <field name="model">scholarship.lines.remarks</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="remark"/>
            </list>
        </field>
    </record>


    <record id="action_scholarship_lines_remarks" model="ir.actions.act_window">
        <field name="name">Remarks</field>
        <field name="res_model">scholarship.lines.remarks</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
