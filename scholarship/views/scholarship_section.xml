<odoo>

    <record id="view_scholarship_section_tree" model="ir.ui.view">
        <field name="name">scholarship.section.list</field>
        <field name="model">scholarship.section</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_scholarship_section" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">scholarship.section</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
