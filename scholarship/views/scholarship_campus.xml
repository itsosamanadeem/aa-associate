<odoo>
    <record id="view_scholarship_campus_tree" model="ir.ui.view">
        <field name="name">scholarship.campus.list</field>
        <field name="model">scholarship.campus</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="name"/>
            </list>
        </field>
    </record>
    <!-- Actions -->
    <record id="action_scholarship_campus" model="ir.actions.act_window">
        <field name="name">Campuses</field>
        <field name="res_model">scholarship.campus</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
