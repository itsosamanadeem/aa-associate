<odoo>
    <record id="view_scholarship_stages_tree" model="ir.ui.view">
        <field name="name">scholarship.stages.list</field>
        <field name="model">scholarship.stages</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="True" default_order="sequence">
                <field name="sequence" widget="handle" />
                <field name="stage"/>
            </list>
        </field>
    </record>
    <!-- Actions -->
    <record id="action_scholarship_stages" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">scholarship.stages</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
