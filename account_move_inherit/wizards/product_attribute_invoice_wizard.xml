<odoo>
    <record id="view_product_attribute_invoice_wizard_form" model="ir.ui.view">
        <field name="name">product.attribute.invoice.wizard.form</field>
        <field name="model">product.attribute.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Product Attributes">
                <group>
                    <field name="product_id"/>
                    <field name="product_tmpl_id"/>
                </group>
                <field name="attribute_line_ids" mode="kanban" widget="kanban"
                    options="{'create': false, 'delete': false}">
                    <kanban>
                        <templates>
                            <t t-name="card">
                                <div class="oe_kanban_global_click">
                                    <div>
                                        <field name="is_selected" widget="boolean_toggle"/>
                                    </div>
                                    <div>
                                        <strong><field name="attribute_value_id"/></strong>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>