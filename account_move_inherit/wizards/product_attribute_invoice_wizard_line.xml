<odoo>
    <record id="view_product_attribute_invoice_wizard_kanban" model="ir.ui.view">
        <field name="name">product.attribute.invoice.wizard.line.kanban</field>
        <field name="model">product.attribute.invoice.wizard.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="is_selected"/>
                <field name="attribute_value_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <field name="is_selected" widget="boolean_toggle"/>
                            </div>
                            <div>
                                <strong><field name="attribute_value_id"/></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>