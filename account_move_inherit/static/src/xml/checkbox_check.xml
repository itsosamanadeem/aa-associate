<templates xml:space="preserve">
    <t t-name="account_move_inherit.FieldWithCheckbox">
        <div class="d-flex flex-row align-items-center gap-2">
            <!-- Original field -->
            <t t-component="props.InnerField"
               t-props="props" />

            <!-- Checkbox -->
            <CheckBox
                value="props.record.data.extra_flags?.[props.name] || false"
                t-on-change="onToggle"
            />
        </div>
    </t>
</templates>
