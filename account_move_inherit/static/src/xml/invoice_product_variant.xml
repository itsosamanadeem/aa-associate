<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="account_move_inherit.InvoiceProductField" >
        <button type="button" class="btn btn-secondary fa fa-pencil px-2" t-att-disabled="this.props.record._parentRecord.data.state !== 'draft'" t-on-click="onEditConfiguration"/>
        <!-- Selected Variants -->
        <t t-if="state.selected_variant_names.length">
            <div class="mt-3">
                <div class="row g-2">
                    <t t-foreach="state.selected_variant_names" t-as="v" t-key="v">
                        <div class="col-2">
                            <small>
                                <em>
                                    <t t-esc="v"/>
                                    <t t-if="v !== state.selected_variant_names[state.selected_variant_names.length - 1]">, </t>
                                </em>
                            </small>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </t>

</templates>
