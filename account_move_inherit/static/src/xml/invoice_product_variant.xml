<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="account_move_inherit.InvoiceProductField" >
        <button type="button" class="btn btn-secondary fa fa-pencil px-2"
                t-att-disabled="this.props.record._parentRecord.data.state !== 'draft'"
                t-on-click="onEditConfiguration"/>
        
        <!-- Selected Variants -->
        <t t-if="state.selected_variant_names.length">
            <div class="mt-2">
                <small>
                    <em>
                        <!-- Outer loop: every 3 variants = 1 row -->
                        <t t-foreach="_.chunk(state.selected_variant_names, 3)" t-as="row" t-key="row">
                            <div>
                                <!-- Inner loop: variants inside this row -->
                                <t t-foreach="row" t-as="v" t-key="v" t-foreach-index="j">
                                    <t t-esc="v"/>
                                    <t t-if="j !== row.length - 1">, </t>
                                </t>
                            </div>
                        </t>
                    </em>
                </small>
            </div>
        </t>
    </t>

</templates>
