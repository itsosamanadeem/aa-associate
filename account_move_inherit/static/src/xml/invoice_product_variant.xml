<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="account_move_inherit.InvoiceProductField" >
        <button type="button" class="btn btn-secondary fa fa-pencil px-2"
                t-att-disabled="this.props.record._parentRecord.data.state !== 'draft'"
                t-on-click="onEditConfiguration"/>
        
        <!-- Selected Variants -->
        <t t-if="state.selected_variant_names.length">
            <div class="mt-2">
                <small>
                    <em>
                        <t t-foreach="state.selected_variant_names" t-as="v" t-key="v" t-foreach-index="i">
                            <t t-esc="v"/>
                            <!-- add comma if not last in row -->
                            <t t-if="(i % 3 !== 2) and (i !== state.selected_variant_names.length - 1)">, </t>
                            <!-- line break after every 3rd variant -->
                            <t t-if="i % 3 === 2">
                                <br/>
                            </t>
                        </t>
                    </em>
                </small>
            </div>
        </t>
    </t>

</templates>
