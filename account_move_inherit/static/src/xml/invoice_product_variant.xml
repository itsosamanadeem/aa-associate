<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="account_move_inherit.InvoiceProductField" >
        <t t-component="many2OneField.component" t-props="props" />
        <button type="button" class="btn btn-secondary fa fa-pencil px-2" t-on-click="onEditConfiguration"/>
        <span class="mx-2">
            <t t-esc="(props.record.data.product_id and props.record.data.product_id[1]) or ''"/>
        </span>

        <!-- Selected variants (badges) -->
        <t t-if="state.selected_variant_names.length">
            <div class="mt-1">
                <strong>Variants:</strong>
                <t t-foreach="state.selected_variant_names" t-as="v" t-key="v">
                    <span class="badge bg-secondary me-1">
                        <t t-esc="v"/>
                    </span>
                </t>
            </div>
        </t>
    </t>

</templates>
