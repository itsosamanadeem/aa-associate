<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="account_move_inherit.InvoiceProductField" >
        <button type="button" class="btn btn-secondary fa fa-pencil px-2"
                t-att-disabled="this.props.record._parentRecord.data.state !== 'draft'"
                t-on-click="onEditConfiguration"/>
        
        <!-- Selected Variants -->
        <t t-if="state.selected_variant_names.length">
            <div class="mt-2">
                <!-- Loop in steps of 2 -->
                <t t-foreach="Array.from({length: Math.ceil(state.selected_variant_names.length / 2)}, (_,i) => i)" t-as="rowIndex" t-key="rowIndex">
                    <div class="row g-2 mb-1">
                        <!-- First item in the row -->
                        <div class="col-6">
                            <small><em><t t-esc="state.selected_variant_names[rowIndex*2]"/></em></small>
                        </div>
                        <!-- Second item in the row (if exists) -->
                        <div class="col-6" t-if="state.selected_variant_names[rowIndex*2+1]">
                            <small><em><t t-esc="state.selected_variant_names[rowIndex*2+1]"/></em></small>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </t>

</templates>
