<templates id="template" xml:space="preserve">
    <t t-name="account_move_inherit.ProductVariantDialog" owl="1">
        <Dialog title="Select Product Variant" size="large">
            <div class="o_variant_list" style="display:flex;flex-wrap:wrap;gap:10px;">
                <t t-foreach="variantList" t-as="variant" t-key="variant.id">
                    <div class="o_variant_item" style="border:1px solid #ccc;padding:10px;cursor:pointer;"
                         t-on-click="() => selectVariant(variant)">
                        <img t-att-src="variant.imageUrl" alt="Variant Image" width="64" height="64"/>
                        <div>
                            <strong t-esc="variant.name"/>
                            <br/>
                            <span>Price: <t t-esc="variant.price"/></span>
                        </div>
                    </div>
                </t>
            </div>
            <footer>
                <button type="button" class="btn btn-secondary" t-on-click="close">Cancel</button>
            </footer>
        </Dialog>
    </t>
</templates>
