<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_move_inherit.ProductVariantDialog">
        <Dialog title="'Product Variants'" size="'lg'">
            <td class="o_sale_product_configurator_img py-3 px-0">
                <img
                    class="w-100"
                    t-att-src="imageUrl"
                    alt="Product Image"
                />
            </td>
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price Extra</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="props.variants" t-as="variant" t-key="variant.id">
                        <tr>
                            <td><t t-esc="variant.name" /></td>
                            <td><t t-esc="variant.price" /></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <t t-set-slot="footer">
                <button
                    name="sale_product_configurator_confirm_button"
                    class="btn btn-primary"
                    >
                    Confirm
                </button>
                <button
                    name="sale_product_configurator_cancel_button"
                    class="btn btn-secondary"
                    t-on-click="close"
                >
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>


