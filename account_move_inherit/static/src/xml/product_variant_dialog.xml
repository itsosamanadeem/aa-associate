<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account_move_inherit.ProductVariantDialog">
        <Dialog title="'Product Variants'" size="'lg'">
            <div class="row g-3"> <!-- Bootstrap row with gutter -->
                
                <div class="col-md-2 text-center">
                    <img class="o_sale_product_configurator_img mb-2 img-fluid"
                         t-att-src="this.imageUrl"
                         alt="Variant Image"
                         width="64"
                         height="64"/>
                </div>

                <div class="col-md-2">
                    <div class="fw-bold">
                        <t t-esc="this.product_name"/>
                    </div>
                    <div class="fw-bold d-flex align-items-center gap-1">
                        <t t-esc="this.product_name"/>
                        <span > Class</span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="o_variant_list d-flex flex-wrap gap-2">
                        <t t-foreach="state.variantList" t-as="variant" t-key="variant.id">
                            <div class="o_variant_item d-flex align-items-center bg-light rounded" t-on-click="() => selectVariant(variant)">
                                <input type="checkbox"
                                    class="form-check-input me-2"
                                    t-on-click="selectVariant(variant)"/>
                                <div class="fw-bold">
                                    <t t-esc="variant.name"/>
                                </div>
                                <div class="text-muted small border rounded">
                                    Price: <t t-esc="variant.price"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <div class="col-md-2">
                    Counter
                </div>

                <div class="col-md-2">
                    Total Price
                </div>
                
            </div>

            <!-- Footer buttons -->
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="confirm">
                    Confirm
                </button>
                <button class="btn btn-secondary" t-on-click="close">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
