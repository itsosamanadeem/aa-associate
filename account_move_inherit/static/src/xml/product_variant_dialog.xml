<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_move_inherit.ProductVariantDialog">
        <Dialog title="'Product Variants'" size="'lg'">
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price Extra</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="props.variants" t-as="variant" t-key="variant.name">
                        <tr>
                            <td><t t-esc="variant.name" /></td>
                            <td><t t-esc="variant.price" /></td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <!-- Footer buttons -->
            <div class="mt-3 text-end">
                <button class="btn btn-secondary" t-on-click="close">Cancel</button>
            </div>
        </Dialog>
    </t>
</templates>


