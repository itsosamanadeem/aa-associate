<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account_move_inherit.ProductVariantDialog">
        <Dialog title="'Product Variants'" size="'lg'">
            <div class="row g-3"> <!-- Bootstrap row with gutter -->
                
                <!-- Column 1: Image -->
                <div class="col-md-4 text-center">
                    <img class="o_sale_product_configurator_img mb-2 img-fluid"
                         t-att-src="this.imageUrl"
                         alt="Variant Image"
                         width="64"
                         height="64"/>
                </div>

                <!-- Column 2: Variant list -->
                <div class="col-md-4">
                    <div class="o_variant_list d-flex flex-wrap gap-2">
                        <t t-foreach="state.variantList" t-as="variant" t-key="variant.id">
                            <div class="o_variant_item card p-2" style="cursor:pointer; width:150px; text-align:center;" t-on-click="() => selectVariant(variant)">
                                <div class="fw-bold">
                                    <t t-esc="variant.name"/>
                                </div>
                                <div class="text-muted small">
                                    Price: <t t-esc="variant.price"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Column 3: Counter -->
                <div class="col-md-4">
                    Counter
                </div>

            </div>

            <!-- Footer buttons -->
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="confirm">
                    Confirm
                </button>
                <button class="btn btn-secondary" t-on-click="close">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
