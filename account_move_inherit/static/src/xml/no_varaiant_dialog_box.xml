<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account_move_inherit.NoVariantDialog">
        <Dialog title="'Oopss!!!'" size="'lg'">
            <div class="text-center">
                <img src="/account_move_inherit/static/src/img/no_variants.png" alt="No Variants"
                     class="img-fluid mb-3" style="max-width: 200px;"/>
                <p class="lead">No variants are defined for this product. Please check the product configuration.</p>
            </div>
            <t t-set-slot="footer">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <!-- Left side: total -->
                    <div>
                        <button class="btn btn-secondary" t-on-click="close">
                            Cancel
                        </button>
                    </div>
                </div>
            </t>

        </Dialog>
    </t>
</templates>
