<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="account_move_inherit.ApplicationNumberField">
        <t t-foreach="state.rows" t-as="row" t-key="row.index">
            <div class="d-flex align-items-center gap-2 mb-2">
                <!-- Dropdown with ALL variants -->
                <div>
                    <select class="form-select"
                            t-on-change="(ev) => this.onVariantChange(row.index, ev.target.value)">
                        <t t-foreach="state.variant_names" t-as="variant_name" t-key="variant_name">
                            <option t-att-selected="row.variant === variant_name ? 'selected' : false"
                                    t-esc="variant_name"/>
                        </t>
                    </select>
                </div>

                <!-- Number input -->
                <div>
                    <input type="number"
                           class="form-control"
                           style="width:100px !important;"
                           t-att-value="row.value"
                           t-on-change="(ev) => this.onValueChange(row.index, ev.target.value)"/>
                </div>
            </div>
        </t>
    </t>

</templates>
