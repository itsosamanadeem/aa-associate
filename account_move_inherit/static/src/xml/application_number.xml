<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="account_move_inherit.ApplicationNumberField">
        <t t-foreach="state.variant_names" t-as="variant_name" t-key="variant_name">
            <div class="d-flex align-items-center gap-2 mb-2">
                <!-- Dropdown with all variants -->
                <div>
                    <select class="form-select"
                            t-on-change="(ev) => this.onVariantChange(variant_name, ev.target.value)">
                        <t t-foreach="state.variant_names" t-as="opt" t-key="opt">
                            <option t-att-selected="state.selected[variant_name] === opt ? 'selected' : false"
                                    t-esc="opt"/>
                        </t>
                    </select>
                </div>

                <!-- Number input -->
                <div>
                    <input type="number"
                           class="form-control"
                           style="width:100px !important;"
                           t-att-value="state.values[variant_name] || ''"
                           t-on-change="(ev) => this.onValueChange(variant_name, ev.target.value)"/>
                </div>
            </div>
        </t>
    </t>

</templates>
