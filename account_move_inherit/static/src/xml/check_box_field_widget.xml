<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.ListRenderer.RecordRow"
       t-inherit-mode="extension"
       t-name="account_move_inherit.ListRendererWithCheckboxPerField">

        <!-- After each <Field ...> add a CheckBox -->
        <xpath expr="//Field[@t-else='']" position="after">
            <CheckBox
                value="record.data[column.name + '_checked'] || true"
                t-on-change="(ev) => this.onToggle(record, column, ev)"
            />
        </xpath>

    </t>

</templates>
