<odoo>
    <record id="view_trademark_history_form" model="ir.ui.view">
        <field name="name">trademark.history.form</field>
        <field name="model">trademark.history</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': true}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Case Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="services_taken" readonly="status == 'done'"/>
                            <field name="start_date" readonly="status == 'done'"/>
                            <field name="end_date" readonly="status == 'done'"/>
                            <field name="add_file" filename="add_file_filename" widget="file" readonly="status == 'done'"/>
                            <field name="case_description" readonly="status == 'done'"/>
                            <field name="trademark_id" readonly="status == 'done'"/>
                            <field name="add_file_filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="currency_id" readonly="status == 'done'"/>
                            <field name="fee_per_class" readonly="status == 'done'"/>
                            <field name="total_fee" readonly="status == 'done'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trademark_history_tree" model="ir.ui.view">
        <field name="name">trademark.history.tree</field>
        <field name="model">trademark.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="case_description"/>
                <field name="services_taken"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="trademark_id"/>
                <field name="add_file" widget="pdf_viewer" optional="hide"/>
                <field name="total_fee"/>
                <field name="fee_per_class"/>
                <field name="currency_id" optional="hide"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>
