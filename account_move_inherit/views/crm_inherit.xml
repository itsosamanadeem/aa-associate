<odoo>
    <record id="view_crm_lead_form_inherit_trademark" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.trademark</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">

            <!-- Insert into the first notebook of CRM lead -->
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Trademark Details" name="trademark_details_page">
                    <group name="trademark_group">
                        <field name="associated_trademark_ids">
                            <!-- Form view for One2many lines -->
                            <form>
                                <sheet string="Trademark">
                                    <group>
                                        <group>
                                            <field name="trademark_name"/>
                                            <field name="trademark_number"/>
                                        </group>
                                    </group>
                                    <field name="name"/>
                                </sheet>
                            </form>
                            <!-- List view for One2many lines -->
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="trademark_number"/>
                                <field name="trademark_name"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
