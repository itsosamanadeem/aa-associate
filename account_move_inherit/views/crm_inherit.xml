<odoo>
    <record id="view_partner_form_inherit_trademark" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.trademark</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insert into the notebook of Partner form -->
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Trademark Details" name="trademark_details_page">
                    <group name="trademark_group">
                        <field name="associated_trademark_ids">
                            <!-- Form view for res.partner.trademark -->
                            <form string="Trademark">
                                <group>
                                    <field name="trademark_name"/>
                                    <field name="trademark_number"/>
                                    <field name="name"/>
                                </group>
                            </form>

                            <!-- Tree view for res.partner.trademark -->
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="trademark_number"/>
                                <field name="trademark_name"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
